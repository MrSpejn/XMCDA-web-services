<?xml version='1.0' encoding='utf-8'?>
<program_description>
  <program provider="PUT" name="SelectedAlternatives" version="1.0.0" displayName="SelectedAlternatives" />
  <documentation>
    <description></description>
    <contact><![CDATA[Tomasz Josiak <tomasz.josiak@gmail.com>]]></contact>
  </documentation>
  <parameters>

    <input id="input1" name="alternatives" displayName="alternatives" isoptional="0">
      <documentation>
        <description>Selected alternatives.</description>
      </documentation>
      <xmcda tag="alternatives" />
    </input>

    <input id="input2" name="selection_values" displayName="Alternatives selection table" isoptional="0">
      <documentation>
        <description>Alternatives values where 1 means selection and any other value means rejection</description>
      </documentation>
      <xmcda tag="alternativesValues" />
    </input>


    <input id="seed"
      name="seed"
      displayName="seed"
      isoptional="0">
      <documentation>
          <description>The seed to control randomness (if set to 0 seed won't be set)</description>
      </documentation>
      <xmcda tag="methodParameters">
          <![CDATA[
              <methodParameters>
                  <parameter id="seed" name="seed"> <!-- REQUIRED  -->
                      <value>
                          <integer>%1</integer>
                      </value>
                  </parameter>
                  <parameter id="font_size" name="font_size"> <!-- REQUIRED  -->
                      <value>
                          <integer>%2</integer>
                      </value>
                  </parameter>
              </methodParameters>
              ]]>
      </xmcda>
      
      <gui status="preferGUI">
          <entry id="%1" type="int" displayName="seed">
              <documentation>
                  <description>The seed to control randomness</description>
              </documentation>
              <constraint>
                  <description>An integer value.</description>
                  <code>
                      <![CDATA[
                          %1 >= 0
                      ]]>
                  </code>
              </constraint>
              <defaultValue>0</defaultValue>
          </entry>
          <entry id="%2" type="int" displayName="font size">
              <documentation>
                  <description>Labels font size</description>
              </documentation>
              <constraint>
                  <description>An integer value.</description>
                  <code>
                      <![CDATA[
                          %1 >= 0
                      ]]>
                  </code>
              </constraint>
              <defaultValue>0</defaultValue>
          </entry>
      </gui>
  </input>
    <output id="output1" name="image" displayName="image">
      <documentation>
        <description>Selection visualization.</description>
      </documentation>
      <xmcda tag="alternatives" />
    </output>

    <output id="output2" name="messages" displayName="messages">
      <documentation>
        <description>Messages or errors generated by this module.</description>
      </documentation>
      <xmcda tag="methodMessages" />
    </output>

  </parameters>
</program_description>
